<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
    </style>

    <style name="TextView.Primary" parent="@android:style/Widget.Material.TextView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/txt_small</item>
    </style>

    <style name="TextView.Primary.Large" parent="@android:style/Widget.Material.TextView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/txt_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Secondary" parent="@android:style/Widget.Material.TextView">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/txt_small</item>
    </style>

</resources>
