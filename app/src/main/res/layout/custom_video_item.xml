<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/whole_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/material_margin_s"
    android:layout_marginTop="@dimen/material_margin_s"
    android:layout_marginEnd="@dimen/material_margin_s">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/material_margin_s"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_thumb"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_card_img_height"
            android:scaleType="centerCrop"
            android:src="@color/divider"
            tools:ignore="ContentDescription" />


        <TextView
            android:id="@+id/tv_title"
            style="@style/TextView.Primary.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/material_margin"
            android:layout_marginTop="@dimen/material_margin"
            android:layout_marginEnd="@dimen/material_margin"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="Super movie" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginStart="@dimen/material_margin"
            android:layout_marginTop="@dimen/material_margin_xs"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/rating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/tv_rating"
                style="@style/TextView.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/material_margin"
                tools:text="4.5" />

            <TextView
                android:id="@+id/tv_raters"
                style="@style/TextView.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/material_margin_s"
                tools:text="(892)" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_description"
            style="@style/TextView.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/material_margin"
            android:layout_marginTop="@dimen/material_margin"
            android:layout_marginEnd="@dimen/material_margin"
            android:ellipsize="end"
            android:maxLines="4"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>